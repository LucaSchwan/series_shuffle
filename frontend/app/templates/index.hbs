{{page-title "Home"}}

<form>
    <PowerSelect @options={{this.model}}
                 @selected={{this.pickedSeries}}
                 @onChange={{this.valueChanged}}
                 @searchField="title"
                 @searchEnabled=true
                 as |series|>
        {{series.title}}
    </PowerSelect>
    <button type="button" onClick={{this.shuffle}}>Shuffle Series</button>
</form>

{{#each this.seasons as |season|}}
    {{season.number}}
    {{season.episodes}}
{{/each}}
{{outlet}}
