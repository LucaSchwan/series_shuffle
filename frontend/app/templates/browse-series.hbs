{{page-title "BrowseSeries"}}
<div class="flex flex-col justify-center items-center mb-8 space-y-6">
    {{#each this.model as |series|}}
        <div class="flex items-start p-4 w-4/5 rounded border-2 border-gray-800 shadow-xl justify-left">
            <div class="flex flex-col space-y-2 w-1/3">
                <div class="text-xl font-bold">{{series.title}}</div>
                {{{series.description}}}
            </div>
            <div class="flex flex-col space-x-2">
                <div class="mb-2 text-xl tracking-wider text-gray-800 uppercase">Seasons</div>
                <div class="flex p-3 space-x-2">
                    <div class="flex flex-col space-y-3 text-gray-800">
                        <div>Season</div>
                        <div>Episodes</div> 
                    </div>
                    {{#each series.seasons as |season|}}
                        <div class="flex flex-col items-center space-y-3 text-gray-700">
                            <span>|</span>
                            <span>|</span> 
                        </div>
                        <div class="flex flex-col items-center space-y-3 text-gray-800">
                            <div>{{season.number}}</div>
                            <div>{{season.episodes}}</div> 
                        </div>
                    {{/each}}
                </div>
            </div>
        </div>
    {{/each}}
</div>
